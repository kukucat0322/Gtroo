<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView	
        android:id="@+id/niuBSv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:scrollbars="none">
	    <TextView
	        android:id="@+id/niuBEffectText"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:focusable="false"
	        android:clickable="false"
	        android:focusableInTouchMode="false"
	        android:gravity="left"
	        android:textSize="15sp"
	        android:textColor="#00ff00"/>
    </ScrollView>
 
    <TextView
        android:id="@+id/downloadURLAddressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/downloadURLAddress"
        android:layout_alignLeft="@+id/interactiveURLAddressTitle"
        android:text="@string/downloadURLAddress"/>
    
    <TextView
        android:id="@+id/downloadURLAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/interactiveURLAddressTitle"
        android:layout_alignLeft="@+id/interactiveURLAddressTitle"/>    
    
    <TextView
        android:id="@+id/interactiveURLAddressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_centerInParent="true"
        android:text="@string/interactiveURLAddress"/>
    
    <TextView
        android:id="@+id/interactiveURLAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interactiveURLAddressTitle"
        android:layout_alignLeft="@+id/interactiveURLAddressTitle"/>
    
    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/startCheckServer"/>
    
</RelativeLayout>
