<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEFEF"
    android:orientation="vertical" >
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_bg"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:text="@string/systemConfiguration"
        android:textAppearance="?android:attr/textAppearanceLarge">
    </TextView> 
     
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:paddingTop="10dip">

            <TextView
                android:id="@+id/titleNetConfig"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/systemConfigurationNetConfig"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/titleStoreInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/systemConfigurationStoreInfo"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/titleParamConfig"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/systemConfigurationParamConfig"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/titlePrintFormat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/systemConfigurationPrintFormat"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="3dip" >

            <ImageView
                android:id="@+id/titleBottomLine"
                android:layout_width="120dip"
                android:layout_height="2dip"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:scaleType="matrix"
                android:src="#00ffff"/>
        </LinearLayout>
        
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#000000"
        android:flipInterval="30"
        android:persistentDrawingCache="animation"/>

</LinearLayout>